<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@drawable/pic_home"
    android:padding="70dp">

    <Button
        android:id="@+id/home_single_mode"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:text="싱글모드"
        android:textSize="20dp"
        android:fontFamily="@font/font1"
        android:background="@drawable/pic_home_single"
        android:layout_marginTop="250dp"/>

    <Button
        android:id="@+id/home_multi_mode"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:text="멀티모드"
        android:textSize="20dp"
        android:fontFamily="@font/font1"
        android:background="@drawable/pic_home_multi"/>

    <Button
        android:id="@+id/home_option"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:text="옵션"
        android:textSize="20dp"
        android:fontFamily="@font/font1"
        android:background="@drawable/pic_home_option"/>


</LinearLayout>