<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MainActivity"
    android:padding="10dp"
    android:background="@drawable/pic_background">

    <Button
        android:id="@+id/option"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/pic_option"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <Button
        android:id="@+id/btn_pause"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/pic_pause"
        app:layout_constraintEnd_toStartOf="@+id/option"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="10dp"
        android:visibility="invisible"
        />

    <Chronometer
        android:id="@+id/chrono"
        android:layout_width="180dp"
        android:layout_height="70dp"
        android:textSize="30dp"
        android:fontFamily="@font/font3"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="60dp"/>

    <SeekBar
        android:id="@+id/seekBar"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:thumb="@drawable/pic_progress"
        android:thumbOffset="2dp"
        android:max="20"
        android:progress="0"
        android:clickable="false"
        app:layout_constraintTop_toBottomOf="@+id/chrono"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <Button
        android:id="@+id/img1"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:background="@drawable/pic_basic"
        app:layout_constraintTop_toBottomOf="@+id/seekBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/img2"
        app:layout_constraintBottom_toTopOf="@id/img4"
        android:scaleType="fitCenter"/>
    <Button
        android:id="@+id/img2"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:background="@drawable/pic_basic"
        app:layout_constraintEnd_toStartOf="@+id/img3"
        app:layout_constraintStart_toEndOf="@+id/img1"
        app:layout_constraintTop_toBottomOf="@+id/seekBar"
        app:layout_constraintBottom_toTopOf="@id/img5"
        android:scaleType="fitCenter"/>
    <Button
        android:id="@+id/img3"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:background="@drawable/pic_basic"
        app:layout_constraintTop_toBottomOf="@+id/seekBar"
        app:layout_constraintStart_toEndOf="@+id/img2"
        app:layout_constraintEnd_toEndOf="@+id/img13"
        app:layout_constraintBottom_toTopOf="@id/img6"
        android:scaleType="fitCenter"/>
    <Button
        android:id="@+id/img13"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:background="@drawable/pic_basic"
        app:layout_constraintTop_toBottomOf="@+id/seekBar"
        app:layout_constraintStart_toEndOf="@+id/img3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/img14"
        android:scaleType="fitCenter"/>

    <Button
        android:id="@+id/img4"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:background="@drawable/pic_basic"
        app:layout_constraintTop_toBottomOf="@+id/img1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/img5"
        app:layout_constraintBottom_toTopOf="@id/img7"
        android:scaleType="fitXY"/>
    <Button
        android:id="@+id/img5"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:background="@drawable/pic_basic"
        app:layout_constraintTop_toBottomOf="@+id/img2"
        app:layout_constraintStart_toEndOf="@+id/img4"
        app:layout_constraintEnd_toStartOf="@+id/img6"
        app:layout_constraintBottom_toTopOf="@id/img8"
        android:scaleType="fitXY"/>
    <Button
        android:id="@+id/img6"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:background="@drawable/pic_basic"
        app:layout_constraintTop_toBottomOf="@+id/img1"
        app:layout_constraintStart_toEndOf="@id/img5"
        app:layout_constraintEnd_toEndOf="@+id/img14"
        app:layout_constraintBottom_toTopOf="@id/img9"
        android:scaleType="fitXY"/>
    <Button
        android:id="@+id/img14"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:background="@drawable/pic_basic"
        app:layout_constraintTop_toBottomOf="@+id/img13"
        app:layout_constraintStart_toEndOf="@+id/img6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/img15"
        android:scaleType="fitCenter"/>

    <Button
        android:id="@+id/img7"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:background="@drawable/pic_basic"
        app:layout_constraintTop_toBottomOf="@+id/img4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/img8"
        app:layout_constraintBottom_toTopOf="@id/img10"
        android:scaleType="fitXY"/>
    <Button
        android:id="@+id/img8"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:background="@drawable/pic_basic"
        app:layout_constraintTop_toBottomOf="@+id/img5"
        app:layout_constraintStart_toEndOf="@+id/img7"
        app:layout_constraintEnd_toStartOf="@+id/img9"
        app:layout_constraintBottom_toTopOf="@id/img11"
        android:scaleType="fitXY"/>
    <Button
        android:id="@+id/img9"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:background="@drawable/pic_basic"
        app:layout_constraintTop_toBottomOf="@+id/img6"
        app:layout_constraintStart_toEndOf="@id/img8"
        app:layout_constraintEnd_toEndOf="@+id/img15"
        app:layout_constraintBottom_toTopOf="@id/img12"
        android:scaleType="fitXY"/>
    <Button
        android:id="@+id/img15"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:background="@drawable/pic_basic"
        app:layout_constraintTop_toBottomOf="@+id/img14"
        app:layout_constraintStart_toEndOf="@+id/img9"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/img16"
        android:scaleType="fitCenter"/>

    <Button
        android:id="@+id/img10"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:background="@drawable/pic_basic"
        app:layout_constraintTop_toBottomOf="@+id/img7"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/img11"
        app:layout_constraintBottom_toTopOf="@+id/img17"
        android:scaleType="fitXY"/>
    <Button
        android:id="@+id/img11"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:background="@drawable/pic_basic"
        app:layout_constraintTop_toBottomOf="@+id/img8"
        app:layout_constraintStart_toEndOf="@+id/img10"
        app:layout_constraintEnd_toStartOf="@+id/img12"
        app:layout_constraintBottom_toTopOf="@+id/img18"
        android:scaleType="fitXY"/>
    <Button
        android:id="@+id/img12"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:background="@drawable/pic_basic"
        app:layout_constraintTop_toBottomOf="@+id/img9"
        app:layout_constraintStart_toEndOf="@id/img11"
        app:layout_constraintEnd_toEndOf="@+id/img16"
        app:layout_constraintBottom_toTopOf="@+id/img19"
        android:scaleType="fitXY"/>
    <Button
        android:id="@+id/img16"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:background="@drawable/pic_basic"
        app:layout_constraintTop_toBottomOf="@+id/img15"
        app:layout_constraintStart_toEndOf="@+id/img12"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/img20"
        android:scaleType="fitCenter"/>

    <Button
        android:id="@+id/img17"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:background="@drawable/pic_basic"
        app:layout_constraintTop_toBottomOf="@+id/img10"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/img18"
        app:layout_constraintBottom_toBottomOf="parent"
        android:scaleType="fitXY"/>
    <Button
        android:id="@+id/img18"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:background="@drawable/pic_basic"
        app:layout_constraintTop_toBottomOf="@+id/img11"
        app:layout_constraintStart_toEndOf="@+id/img17"
        app:layout_constraintEnd_toStartOf="@+id/img19"
        app:layout_constraintBottom_toBottomOf="parent"
        android:scaleType="fitXY"/>
    <Button
        android:id="@+id/img19"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:background="@drawable/pic_basic"
        app:layout_constraintTop_toBottomOf="@+id/img12"
        app:layout_constraintStart_toEndOf="@id/img18"
        app:layout_constraintEnd_toEndOf="@+id/img20"
        app:layout_constraintBottom_toBottomOf="parent"
        android:scaleType="fitXY"/>
    <Button
        android:id="@+id/img20"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:background="@drawable/pic_basic"
        app:layout_constraintTop_toBottomOf="@+id/img16"
        app:layout_constraintStart_toEndOf="@+id/img19"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:scaleType="fitCenter"/>


    <Button
        android:id="@+id/btn_start"
        android:layout_width="270dp"
        android:layout_height="130dp"
        android:text="START"
        android:textSize="40dp"
        android:fontFamily="@font/font2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/pic_button"
        android:visibility="visible"/>

</androidx.constraintlayout.widget.ConstraintLayout>