<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="250dp"
    android:layout_height="320dp"
    android:layout_gravity="center"
    android:background="@drawable/pic_option_background"
    android:orientation="vertical"
    android:paddingLeft="15dp">

    <Button
        android:id="@+id/option_x"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="end"
        android:layout_marginRight="5dp"
        android:background="@drawable/pic_x"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:text="옵션"
        android:textSize="25dp"
        android:fontFamily="@font/font2"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="배경음"
            android:fontFamily="@font/font2"/>
        <Switch
            android:id="@+id/switch_music"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="효과음"
            android:fontFamily="@font/font2"
            android:layout_marginLeft="20dp"/>
        <Switch
            android:id="@+id/switch_effect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>


    <Button
        android:id="@+id/option_level"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="난이도 변경"
        android:textSize="20dp"
        android:fontFamily="@font/font3"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="5dp"/>

    <Button
        android:id="@+id/option_regame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="새 게임"
        android:textSize="20dp"
        android:fontFamily="@font/font3"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="5dp"/>

    <Button
        android:id="@+id/option_home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="홈으로"
        android:textSize="20dp"
        android:fontFamily="@font/font3"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="5dp"/>

</LinearLayout>